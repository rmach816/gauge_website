{
  "cli": {
    "version": ">= 5.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      },
      "env": {
        "ANTHROPIC_API_KEY": "@anthropic_api_key",
        "AMAZON_AFFILIATE_TAG": "@amazon_affiliate_tag",
        "NORDSTROM_AFFILIATE_ID": "@nordstrom_affiliate_id"
      }
    },
    "production-test": {
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      },
      "env": {
        "ANTHROPIC_API_KEY": "@anthropic_api_key",
        "AMAZON_AFFILIATE_TAG": "@amazon_affiliate_tag",
        "NORDSTROM_AFFILIATE_ID": "@nordstrom_affiliate_id"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "admin@billsnap.online",
        "ascAppId": "6755077953",
        "appleTeamId": "K7FD7W8QQ5"
      },
      "android": {
        "serviceAccountKeyPath": "./path/to/api-key.json",
        "track": "production"
      }
    }
  }
}

